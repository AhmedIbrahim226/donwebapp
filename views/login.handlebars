            firebase.initializeApp(firebaseConfig);


            
            function add(){
                document.getElementById('modal_container').classList.add('show');
            }

            function remove(){
                document.getElementById('modal_container').classList.remove('show');
            }

            function resetpass(){
                var txtem = document.getElementById('emSend').value;
                firebase.auth().sendPasswordResetEmail(txtem).then(() => {
                    window.alert(`We have sent you the link to this email ${txtem}, please check the email`)
                }).catch(error => {
                    window.alert(error);
                })
            }


        </script>

    <header>
        <div class="overlay"></div>
        <div class="container">
            <div class="row align-items-center justify-content-md-between top-bar">
                <div class="col-12 col-md-2 logo">
                   <i class="fas fa-quote-right txt-orange"></i>LiFe SaVeRs
                </div>
                <div class="col-12 col-md-8">
                    <nav>
                        <ul class="d-flex justify-content-center justify-content-md-end">
                            <li><a href="/">Home</a></li>
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Settings</a></li>
                            <li><a href="#">Log Out</a></li>    
                        </ul>
                    </nav>
                </div>
            </div>
             <div class="row">
                <div class="col-1">
                    <div class="form-box">
                        <div class="form">
                            <form class="login-form" method="POST">
                                <center><h1 class="main-heading">Login Form</h1></center>
				                <input type="email"placeholder="email" name="email" id="email_field"/>
				                <input type="password"placeholder="password" name="password" id="password_field"/>
				                <button type="submit">LOGIN</button>
								  <p class="message">Not Registered? <a href="/register">Register</a></p>
							</form>
                            <a href="#" onclick="add()" class="message" style="color: rgb(201, 200, 200);">Forgetten password</a>
                    

                            <p style="color: #fff;">{{error}}</p>
						</div>
					</div>
                    </div></div>
		</div>
    </header>
                    
    <div class="modal-container" id="modal_container">
        <div class="modal">
            <div class="close-btn" onclick="remove()">&times;</div>
                <p class="modalp"><b>Please enter the email you are registered with, if you enter an email that you are not registered with, you will not be able to recover the password.</b></p>
            <label for="email" style="font-size: larger; color: black;">Email:</label>
            <input type="email" class="inpst" id="emSend">
            <button class="chbtn" onclick="resetpass()">Send</button>
        </div>
    </div>
